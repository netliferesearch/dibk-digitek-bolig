            {
              "id": "overTreEtasjer.ja",
              "type": "Answer",
              "heading": "Ja",
              "value": true
            },
            {
              "id": "overTreEtasjer.nei",
              "type": "Answer",
              "heading": "Nei",
              "value": false
            }
          ]
        },
        {
          "type": "Reference",
          "nodeId": "dekkerIkkeResult",
          "show": { "field": "overTreEtasjer", "operator": "eq", "value": true }
